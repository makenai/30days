<div id="login-options">

	<div id="sso">
		<%= link_to 'Login with Facebook', '/auth/facebook', :id => 'facebook-connect' %>
		<div class="hint">(we won't post anything without your permission)</div>
		<iframe id="facepile" src="http://www.facebook.com/plugins/facepile.php?app_id=339158919498974" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:300px;" allowTransparency="true"></iframe> 
	</div>

	<div id="or">
		<i>|</i><br />
		or<br />
		<i>|</i>
	</div>

	<div id="login">
		<h2>login</h2>
		<%= link_to raw("wait&hellip;i need to register"), new_registration_path(resource_name) %>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :placeholder => 'name@somethingruther.com' %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password %></div>

		  <% if devise_mapping.rememberable? -%>
		    <!-- <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div> -->
		  <% end -%>
		  <div><%= f.submit "login", :class => 'btn' %></div>
		  <%= link_to raw("err&hellip;i forgot my password"), new_password_path(resource_name) %>

		<% end %>
	</div>

</div>